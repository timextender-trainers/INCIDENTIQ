.insight-list {
    list-style: none;
    padding: 0;
    margin: 0 0 var(--spacing-4) 0;
}

.insight-list li {
    padding: var(--spacing-2) 0;
    color: var(--color-text-secondary);
    font-size: var(--font-size-sm);
    position: relative;
    padding-left: var(--spacing-6);
}

.insight-list li::before {
    content: "ðŸ¤–";
