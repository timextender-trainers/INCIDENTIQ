<style>
.welcome-container {
    min-height: 100vh;
    background: linear-gradient(135deg, var(--primary-50) 0%, var(--neutral-25) 50%, var(--neutral-0) 100%);
    position: relative;
    overflow: hidden;
}

.welcome-container::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
        radial-gradient(circle at 20% 80%, rgba(99, 102, 241, 0.03) 0%, transparent 50%),
        radial-gradient(circle at 80% 20%, rgba(99, 102, 241, 0.05) 0%, transparent 50%);
    pointer-events: none;
}

.hero-section {
    padding: var(--spacing-16) var(--spacing-6);
    max-width: 1200px;
    margin: 0 auto;
}

.hero-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-12);
    align-items: center;
    min-height: 80vh;
}

.hero-title {
    font-size: 3.5rem;
    font-weight: var(--font-weight-bold);
    color: var(--color-text-primary);
    line-height: 1.1;
    margin-bottom: var(--spacing-6);
    position: relative;
    z-index: 2;
}

.brand-highlight {
    background: linear-gradient(135deg, var(--primary-600), var(--primary-500));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    position: relative;
}

.hero-subtitle {
    font-size: var(--font-size-xl);
    color: var(--color-text-secondary);
    margin-bottom: var(--spacing-4);
    font-weight: var(--font-weight-medium);
}

.hero-description {
    font-size: var(--font-size-lg);
    color: var(--color-text-tertiary);
    line-height: 1.6;
    margin-bottom: var(--spacing-8);
}

.cta-container {
    text-align: left;
}

.cta-buttons {
    display: flex;
    gap: var(--spacing-4);
    margin-bottom: var(--spacing-3);
}

.final-cta-buttons {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-4);
    margin-bottom: var(--spacing-6);
}

.btn-lg {
    padding: var(--spacing-4) var(--spacing-8);
    font-size: var(--font-size-lg);
    border-radius: var(--border-radius-xl);
    font-weight: var(--font-weight-semibold);
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-2);
    transition: var(--transition-all);
    box-shadow: var(--shadow-lg);
    border: none;
    cursor: pointer;
    text-decoration: none;
    position: relative;
    overflow: hidden;
}

.btn-lg:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-xl);
}

.btn-primary {
    background: linear-gradient(135deg, var(--primary-600), var(--primary-700));
    color: var(--neutral-0);
}

.btn-primary:hover {
    background: linear-gradient(135deg, var(--primary-700), var(--primary-800));
    box-shadow: var(--shadow-primary-lg);
}

.btn-secondary {
    background: var(--neutral-0);
    color: var(--primary-600);
    border: 2px solid var(--neutral-200);
}

.btn-secondary:hover {
    border-color: var(--primary-200);
    background: var(--primary-50);
    color: var(--primary-700);
}

.cta-subtitle {
    margin-top: var(--spacing-3);
    font-size: var(--font-size-sm);
    color: var(--color-text-tertiary);
}

.feature-preview {
    display: grid;
    gap: var(--spacing-4);
}

.preview-card {
    background: var(--neutral-0);
    border: 1px solid var(--neutral-200);
    border-radius: var(--radius-xl);
    padding: var(--spacing-6);
    text-align: center;
    transition: var(--transition-all);
    box-shadow: var(--shadow-sm);
    position: relative;
    backdrop-filter: blur(10px);
}

.preview-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
    border-color: var(--primary-200);
}

.preview-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, var(--primary-500), var(--primary-600));
    border-radius: var(--radius-xl) var(--radius-xl) 0 0;
    opacity: 0;
    transition: var(--transition-opacity);
}

.preview-card:hover::before {
    opacity: 1;
}

.card-icon {
    font-size: 2rem;
    margin-bottom: var(--spacing-3);
}

.preview-card h3 {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text-primary);
    margin-bottom: var(--spacing-2);
}

.preview-card p {
    color: var(--color-text-secondary);
    font-size: var(--font-size-sm);
}

.value-section, .proof-section {
    padding: var(--spacing-16) var(--spacing-6);
    background: var(--color-surface);
}

.container {
    max-width: 1200px;
    margin: 0 auto;
}

.section-title {
    font-size: 2.5rem;
    font-weight: var(--font-weight-bold);
    color: var(--color-text-primary);
    text-align: center;
    margin-bottom: var(--spacing-12);
}

.value-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: var(--spacing-8);
}

.value-card {
    background: var(--neutral-0);
    border: 1px solid var(--neutral-200);
    border-radius: var(--radius-2xl);
    padding: var(--spacing-8);
    text-align: center;
    transition: var(--transition-all);
    box-shadow: var(--shadow-sm);
    position: relative;
    overflow: hidden;
}

.value-card:hover {
    transform: translateY(-6px);
    box-shadow: var(--shadow-xl);
    border-color: var(--primary-200);
}

.value-card::after {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: linear-gradient(45deg, transparent 40%, rgba(99, 102, 241, 0.02) 50%, transparent 60%);
    transform: translateX(-100%) translateY(-100%) rotate(45deg);
    transition: transform 0.6s ease;
}

.value-card:hover::after {
    transform: translateX(0) translateY(0) rotate(45deg);
}

.value-icon {
    font-size: 3rem;
    margin-bottom: var(--spacing-4);
}

.value-card h3 {
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text-primary);
    margin-bottom: var(--spacing-3);
}

.value-card p {
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin-bottom: var(--spacing-4);
}

.value-stat {
    font-weight: var(--font-weight-semibold);
    color: var(--color-success-600);
    font-size: var(--font-size-sm);
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.proof-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--spacing-8);
    text-align: center;
}

.stat-number {
    font-size: 3rem;
    font-weight: var(--font-weight-bold);
    color: var(--color-primary-600);
    margin-bottom: var(--spacing-2);
}

.stat-label {
    color: var(--color-text-secondary);
    font-weight: var(--font-weight-medium);
}

.final-cta {
    padding: var(--spacing-16) var(--spacing-6);
    background: linear-gradient(135deg, var(--primary-600), var(--primary-700));
    color: white;
    text-align: center;
    position: relative;
    overflow: hidden;
}

.final-cta::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse"><path d="M 10 0 L 0 0 0 10" fill="none" stroke="rgba(255,255,255,0.05)" stroke-width="0.5"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)"/></svg>');
    opacity: 0.3;
}

.cta-content h2 {
    font-size: 2.5rem;
    font-weight: var(--font-weight-bold);
    margin-bottom: var(--spacing-4);
}

.cta-content p {
    font-size: var(--font-size-lg);
    margin-bottom: var(--spacing-8);
    opacity: 0.9;
}

.final-cta .btn {
    background: var(--color-surface);
    color: var(--color-primary-600);
    border: none;
    margin-bottom: var(--spacing-6);
}

.final-cta .btn:hover {
    background: var(--color-primary-50);
    color: var(--color-primary-700);
}

.btn-outline {
    background: transparent;
    color: white;
    border: 2px solid rgba(255, 255, 255, 0.3);
}

.btn-outline:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: white;
}

.cta-benefits {
    display: flex;
    justify-content: center;
    gap: var(--spacing-8);
    flex-wrap: wrap;
}

.benefit {
    font-size: var(--font-size-sm);
    opacity: 0.9;
}

