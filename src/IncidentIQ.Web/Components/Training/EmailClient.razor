.footer-actions {
    display: flex;
    gap: var(--space-2);
}

.btn-reply, .btn-forward {
    background: var(--white);
    border: 1px solid var(--gray-300);
    padding: var(--space-2) var(--space-4);
    border-radius: var(--radius);
    cursor: pointer;
    color: var(--gray-600);
    font-size: 0.875rem;
    display: flex;
    align-items: center;
    gap: var(--space-2);
    transition: all 0.2s ease;
    font-family: var(--font-inter);
    font-weight: 500;
}

.btn-reply:hover, .btn-forward:hover {
    background-color: var(--gray-50);
    border-color: var(--gray-400);
    transform: translateY(-1px);
    box-shadow: var(--shadow-sm);
}

.footer-info {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    font-size: 0.75rem;
    color: var(--gray-500);
    font-family: var(--font-inter);
}

.footer-menu {
    display: flex;
    gap: var(--space-4);
}

.btn-footer {
    background: none;
    border: none;
    color: var(--primary-blue);
    font-size: 0.75rem;
    cursor: pointer;
    text-decoration: underline;
    font-family: var(--font-inter);
    transition: color 0.2s ease;
}

/* Hover Effects & Suspicious Elements */
.hover-suspicious {
    position: relative;
    transition: all 0.2s ease;
    border-radius: var(--radius-sm);
}

.hover-suspicious:hover {
    background-color: rgba(245, 158, 11, 0.1);
    cursor: help;
    box-shadow: var(--shadow-sm);
}

.hover-warning:hover {
    background-color: rgba(239, 68, 68, 0.1);
    border-color: var(--danger);
    box-shadow: var(--shadow-sm);
}

/* AI Coaching Tooltip */
.coaching-tooltip {
    position: fixed;
    background: var(--navy-dark);
    color: var(--white);
    border-radius: var(--radius-lg);
    padding: 0;
    z-index: 10000;
    max-width: 320px;
    box-shadow: var(--shadow-xl);
    font-size: 0.8125rem;
    overflow: hidden;
    font-family: var(--font-inter);
    border: 1px solid var(--gray-300);
}

.tooltip-header {
    background: var(--navy-medium);
    padding: var(--space-2) var(--space-3);
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-weight: 600;
    font-family: var(--font-inter);
}

.tooltip-header i {
    color: var(--success);
}

.tooltip-content {
    padding: var(--space-3);
    line-height: 1.5;
    font-family: var(--font-inter);
}

.tooltip-content strong {
    color: var(--warning);
}

.tooltip-content .warning {
    color: #fca5a5;
}

.tooltip-content .tip {
    color: #93c5fd;
}
</style>

