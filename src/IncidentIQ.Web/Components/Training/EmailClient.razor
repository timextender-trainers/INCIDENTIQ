    gap: var(--space-3);
    align-items: center;
}

.signature-text {
    font-size: 0.8125rem;
    line-height: 1.5;
    font-family: var(--font-inter);
}

.signature-text strong {
    color: var(--gray-900);
}

/* Email Footer */
.email-footer {
    background: var(--gray-50);
    border-top: 1px solid var(--gray-200);
    padding: var(--space-3) var(--space-6);
    display: flex;
    justify-content: space-between;
    align-items: center;
