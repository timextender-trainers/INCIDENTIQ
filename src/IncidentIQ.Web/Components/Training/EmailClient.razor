@rendermode InteractiveServer
@inject IJSRuntime JSRuntime

<div class="email-client">
    <!-- Gmail-style Toolbar -->
    <div class="email-toolbar">
        <div class="toolbar-left">
            <button class="btn-icon" title="Archive" @onclick="ArchiveEmail">
                <i class="bi bi-archive"></i>
            </button>
            <button class="btn-icon" title="Report spam" @onclick="ReportSpam">
                <i class="bi bi-exclamation-octagon"></i>
            </button>
            <button class="btn-icon" title="Delete" @onclick="DeleteEmail">
                <i class="bi bi-trash"></i>
            </button>
            <div class="toolbar-divider"></div>
            <button class="btn-icon" title="Mark as unread" @onclick="ToggleReadStatus">
                <i class="bi bi-envelope"></i>
            </button>
            <button class="btn-icon" title="Add to Tasks" @onclick="AddToTasks">
                <i class="bi bi-plus-square"></i>
            </button>
            <button class="btn-icon" title="Move to" @onclick="ShowMoveOptions">
                <i class="bi bi-folder-plus"></i>
            </button>
        </div>
        <div class="toolbar-right">
            <button class="btn-icon" title="Print" @onclick="PrintEmail">
                <i class="bi bi-printer"></i>
            </button>
            <button class="btn-icon" title="Pop-out" @onclick="PopOutEmail">
                <i class="bi bi-box-arrow-up-right"></i>
            </button>
        </div>
    </div>

    <!-- Email Content -->
    <div class="email-content">
        <!-- Email Header -->
        <div class="email-header">
            <div class="email-subject">
                <h1>Urgent: Verify Your Account - Action Required Within 24 Hours</h1>
                <div class="email-labels">
                    <span class="label inbox">Inbox</span>
                    <span class="label important">Important</span>
                </div>
            </div>
            
            <div class="email-meta">
                <div class="sender-info">
                    <div class="sender-avatar">
                        <i class="bi bi-shield-check-fill"></i>
                    </div>
                    <div class="sender-details">
                        <div class="sender-line">
                            <strong class="sender-name hover-suspicious" 
                                    @onmouseover="ShowTooltip" 
                                    @onmouseout="HideTooltip" 
                                    title="security@company-portal.com">
                                Security Team
                            </strong>
                            <span class="sender-email hover-suspicious">&lt;security@company-portal.com&gt;</span>
                        </div>
                        <div class="recipient-line">
                            <span>to </span>
                            <span class="recipient">john.doe@company.com</span>
                        </div>
                        <div class="timestamp-line">
                            <span class="timestamp">Today, 2:47 PM</span>
                            <div class="email-actions-inline">
                                <button class="btn-inline" title="Reply" @onclick="ReplyEmail">
                                    <i class="bi bi-reply"></i>
                                </button>
                                <button class="btn-inline" title="Forward" @onclick="ForwardEmail">
                                    <i class="bi bi-arrow-right"></i>
                                </button>
                                <button class="btn-inline" title="More options" @onclick="ShowMoreOptions">
                                    <i class="bi bi-three-dots"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Security Info Bar (subtle warning) -->
                <div class="security-info hover-warning" 
                     @onmouseover="ShowSecurityTooltip" 
                     @onmouseout="HideSecurityTooltip">
                    <i class="bi bi-shield-exclamation"></i>
                    <span>This email was received from an external sender</span>
                </div>
            </div>
        </div>

        <!-- Email Body -->
        <div class="email-body">
            <div class="email-text">
                <p>Dear John Doe,</p>
                
                <p>We've detected unusual activity on your company account. For your security, your account has been temporarily restricted.</p>
                
                <p><strong style="color: #d93025;">IMMEDIATE ACTION REQUIRED:</strong> You must verify your account within 24 hours to prevent permanent suspension.</p>
                
                <div class="verification-box hover-suspicious" 
                     @onmouseover="ShowLinkTooltip" 
                     @onmouseout="HideLinkTooltip">
                    <h3>Account Verification Required</h3>
                    <p>Click the button below to verify your account immediately:</p>
                    <button class="verify-button" @onclick="HandleSuspiciousClick">
                        VERIFY ACCOUNT NOW
                    </button>
                    <p class="small-text">This link expires in 24 hours</p>
                </div>
                
                <p>If you don't verify your account, the following restrictions will apply:</p>
                <ul>
                    <li>Email access will be suspended</li>
                    <li>File sharing privileges will be revoked</li>
                    <li>VPN access will be disabled</li>
                </ul>
                
                <p>This is an automated security measure. Please do not reply to this email.</p>
                
                <p>Best regards,<br>
                <strong>IT Security Team</strong><br>
                Company IT Department</p>
                
                <div class="email-signature">
                    <hr style="border: 1px solid #e8eaed; margin: 20px 0;">
                    <div class="signature-content hover-suspicious" 
                         @onmouseover="ShowSignatureTooltip" 
                         @onmouseout="HideSignatureTooltip">
                        <img src="data:image/svg+xml;base64," alt="Company Logo" style="height: 40px;">
                        <div class="signature-text">
                            <strong>Company IT Security</strong><br>
                            <span style="color: #5f6368;">Protecting your digital assets</span><br>
                            <a href="mailto:security@company-portal.com" style="color: #1a73e8;">security@company-portal.com</a> | 
                            <a href="https://company-portal.com" style="color: #1a73e8;" class="hover-suspicious">www.company-portal.com</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Email Footer Actions -->
        <div class="email-footer">
            <div class="footer-actions">
                <button class="btn-reply" @onclick="ReplyEmail">
                    <i class="bi bi-reply"></i>
                    Reply
                </button>
                <button class="btn-forward" @onclick="ForwardEmail">
                    <i class="bi bi-arrow-right"></i>
                    Forward
                </button>
            </div>
            <div class="footer-info">
                <span class="email-size">1.2 KB</span>
                <div class="footer-menu">
                    <button class="btn-footer" @onclick="ShowEmailDetails">Show details</button>
                    <button class="btn-footer" @onclick="ShowOriginal">Show original</button>
                </div>
            </div>
        </div>
    </div>

    <!-- AI Coaching Tooltip -->
    @if (showTooltip)
    {
        <div class="coaching-tooltip" style="top: @tooltipTop; left: @tooltipLeft;">
            <div class="tooltip-header">
                <i class="bi bi-robot"></i>
                <span>AI Security Coach</span>
            </div>
            <div class="tooltip-content">
                @((MarkupString)tooltipContent)
            </div>
        </div>
    }
</div>

<style>
/* Gmail-style Email Client */
.email-client {
    background: var(--white);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-lg);
    overflow: hidden;
    font-family: var(--font-inter);
    position: relative;
    border: 1px solid var(--gray-200);
}

/* Toolbar */
.email-toolbar {
    background: var(--gray-50);
    border-bottom: 1px solid var(--gray-200);
    padding: var(--space-2) var(--space-4);
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.toolbar-left, .toolbar-right {
    display: flex;
    align-items: center;
    gap: var(--space-1);
}

.btn-icon {
    background: none;
    border: none;
    padding: var(--space-2);
    border-radius: var(--radius);
    cursor: pointer;
    color: var(--gray-500);
    font-size: 1rem;
    transition: all 0.2s ease;
}

.btn-icon:hover {
    background-color: var(--gray-100);
    color: var(--gray-700);
    transform: scale(1.05);
}

.toolbar-divider {
    width: 1px;
    height: 24px;
    background-color: var(--gray-300);
    margin: 0 var(--space-2);
}

/* Email Header */
.email-header {
    padding: var(--space-5) var(--space-6) var(--space-4);
    border-bottom: 1px solid var(--gray-200);
}

.email-subject h1 {
    font-size: 1.375rem;
    font-weight: 500;
    color: var(--gray-900);
    margin: 0 0 var(--space-2) 0;
    line-height: 1.6;
    font-family: var(--font-inter);
}

.email-labels {
    display: flex;
    gap: var(--space-2);
    margin-bottom: var(--space-4);
}

.label {
    font-size: 0.75rem;
    padding: var(--space-1) var(--space-2);
    border-radius: var(--radius-sm);
    font-weight: 600;
    text-transform: uppercase;
    font-family: var(--font-inter);
}

.label.inbox {
    background-color: rgba(59, 130, 246, 0.1);
    color: var(--primary-blue);
}

.label.important {
    background-color: rgba(239, 68, 68, 0.1);
    color: var(--danger);
}

.email-meta {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
}

.sender-info {
    display: flex;
    gap: var(--space-3);
}

.sender-avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--primary-blue), var(--success));
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--white);
    font-size: 1.125rem;
    flex-shrink: 0;
    box-shadow: var(--shadow-sm);
}

.sender-details {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
}

.sender-line {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    flex-wrap: wrap;
}

.sender-name {
    color: var(--gray-900);
    font-size: 0.875rem;
    font-weight: 600;
    font-family: var(--font-inter);
}

.sender-email {
    color: var(--gray-500);
    font-size: 0.875rem;
    font-family: var(--font-inter);
}

.recipient-line, .timestamp-line {
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 0.75rem;
    color: var(--gray-500);
    font-family: var(--font-inter);
}

.timestamp {
    color: var(--gray-500);
    font-family: var(--font-inter);
}

.email-actions-inline {
    display: flex;
    gap: var(--space-1);
}

.btn-inline {
    background: none;
    border: none;
    padding: var(--space-1);
    border-radius: var(--radius);
    cursor: pointer;
    color: var(--gray-500);
    font-size: 0.875rem;
    transition: all 0.2s ease;
}

.btn-inline:hover {
    background-color: var(--gray-100);
    color: var(--gray-700);
    transform: scale(1.05);
}

.security-info {
    background: rgba(245, 158, 11, 0.1);
    border: 1px solid var(--warning);
    border-radius: var(--radius);
    padding: var(--space-2) var(--space-3);
    font-size: 0.75rem;
    color: var(--warning);
    display: flex;
    align-items: center;
    gap: var(--space-2);
    margin-top: var(--space-2);
    font-family: var(--font-inter);
    font-weight: 500;
}

.security-info i {
    font-size: 0.875rem;
}

/* Email Body */
.email-body {
    padding: var(--space-5) var(--space-6);
    line-height: 1.6;
    font-family: var(--font-inter);
}

.email-text p {
