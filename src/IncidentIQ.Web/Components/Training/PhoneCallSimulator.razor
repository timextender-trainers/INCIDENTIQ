/* Animations */
@keyframes pulse {
    0%, 100% {
        transform: scale(1);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
    }
    50% {
        transform: scale(1.05);
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.4);
    }
}

/* Responsive Design */
@media (max-width: 480px) {
    .iphone-frame {
        width: 320px;
        height: 692px;
        border-radius: 40px;
        padding: 8px;
    }
    
    .phone-screen {
        border-radius: 32px;
    }
    
    .caller-avatar {
        width: 150px;
        height: 150px;
    }
    
    .caller-name {
        font-size: 28px;
    }
    
    .call-actions {
        gap: 3rem;
    }
    
    .control-row {
        gap: 2rem;
    }
}

