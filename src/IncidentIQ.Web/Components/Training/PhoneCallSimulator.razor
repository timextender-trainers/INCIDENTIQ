.callback-btn:hover {
    background: #0056b3;
    transform: scale(1.05);
}

/* Call Controls (Active call) */
.call-controls {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
    margin-top: auto;
}

.control-row {
    display: flex;
    justify-content: center;
    gap: 3rem;
}

.end-call-row {
    display: flex;
    justify-content: center;
    margin-top: 1rem;
}

.control-btn {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    border: none;
    background: rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(20px);
    color: #fff;
    font-size: 24px;
    cursor: pointer;
    transition: all 0.2s ease;
    display: flex;
    align-items: center;
    justify-content: center;
